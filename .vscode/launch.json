{
    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Mocha All",
        "program": "${workspaceFolder}/app/node_modules/mocha/bin/_mocha",
        "args": [
            "-r",
            "ts-node/register",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/app/test/",
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "protocol": "inspector"
    },
    ]
  }